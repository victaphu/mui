{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "skipLibCheck": true
  },
  "include": [
    "lint-staged.config.js",
    "tailwind.config.js",
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "api/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
